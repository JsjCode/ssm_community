<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jsj.mapper.InvitationMapper">

    <resultMap id="InvitationCommunityResultMap" type="InvitationCommunity">
        <id column="id" property="id"/>
        <result column="community_id" property="communityId"/>
        <result column="user_id" property="userId"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="time" property="time"/>
        <result column="status" property="status"/>
        <association property="community" javaType="Community">
            <id column="id" property="id"/>
            <result column="name" property="name"/>
            <result column="introduction" property="introduction"/>
            <result column="status" property="status"/>
        </association>
    </resultMap>

    <select id="getTopInvitation" resultMap="InvitationCommunityResultMap">
        SELECT
            invitation.*,
            community.`name`,
            COUNT(comment.`invitation_id`)
        FROM
        invitation,
        comment,
        community
        WHERE invitation.`id` = comment.`invitation_id`
        AND invitation.`community_id` = community.`id`
        AND invitation.`status` = 1
        GROUP BY comment.`invitation_id`
        ORDER BY COUNT(comment.`invitation_id`) DESC
    </select>

    <select id="getInvitationCommunityByInvitationId" parameterType="int" resultMap="InvitationCommunityResultMap">
        SELECT
            invitation.*,
            community.*
        FROM
            invitation
            INNER JOIN community
            ON invitation.`community_id` = community.`id`
                AND invitation.`id` = #{invitationId}
                AND invitation.`status` = 1
    </select>

</mapper>